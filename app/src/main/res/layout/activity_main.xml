<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e2f7f4"
    android:orientation="vertical"
    tools:context="com.kennedy.cryptocurrencyc.MainActivity">

    <LinearLayout
        android:id="@+id/btc"
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:layout_margin="5dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/btc_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:text="BTC COIN"
            android:textColor="#075c6b"
            android:textSize="40dp"
            android:textStyle="normal" />


        <ImageView
            android:id="@+id/bitcoin_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:src="@drawable/bitcoin" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/eth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/eth_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif-condensed"
            android:text="ETH COIN"
            android:textColor="#075c6b"
            android:textSize="40dp" />

        <ImageView
            android:id="@+id/ethereum_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/ethereum" />
    </LinearLayout>

</LinearLayout>